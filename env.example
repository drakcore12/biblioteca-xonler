# ============================================
# Configuración de la Aplicación
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:3000
# ============================================
# Configuración de Base de Datos
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xonler
DB_USER=postgres
DB_PASSWORD=postgres
# Configuración del Pool de Conexiones
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000
# ============================================
# Seguridad y Autenticación
# ============================================
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=biblioteca-xonler
JWT_AUDIENCE=biblioteca-users
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
# ============================================
# Configuración de Logs
# ============================================
LOG_LEVEL=info
LOG_ENCRYPTION=false
LOG_ENCRYPTION_KEY=
LOG_RETENTION_DAYS=30
LOG_COMPRESSION=true
# ============================================
# Configuración de Encriptación
# ============================================
ENCRYPTION_KEY_DIR=./secure
ENCRYPTION_PASSWORD=change-this-password-in-production
ENCRYPTION_SALT=change-this-salt-in-production
# ============================================
# Alertas y Monitoreo
# ============================================
WEBHOOK_URL=
WEBHOOK_TOKEN=
MONITORING_INTERVAL=30000
MONITORING_THRESHOLD_CPU=0.8
MONITORING_THRESHOLD_MEMORY=0.85
MONITORING_THRESHOLD_DISK=0.9
MONITORING_THRESHOLD_RESPONSE_TIME=1000
MONITORING_THRESHOLD_ERROR_RATE=0.05
MONITORING_MAX_RESPONSE_TIMES=1000
ALERT_THRESHOLD_FAILED_LOGINS=5
ALERT_THRESHOLD_SUSPICIOUS=3
ALERT_THRESHOLD_BLOCKED_IPS=10
ALERT_THRESHOLD_ERROR_RATE=0.1
ALERT_THRESHOLD_MEMORY=0.9
ALERT_THRESHOLD_DISK=0.85
ALERT_COOLDOWN_PERIOD=300000
SERVER_NAME=biblioteca-xonler
# ============================================
# Configuración de Cookies
# ============================================
COOKIE_DOMAIN=
# ============================================
# Configuración SSL/TLS (Opcional)
# ============================================
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=
# ============================================
# Configuración de Monitoreo (Prometheus + Grafana)
# ============================================
PROMETHEUS_PORT=9090
POSTGRES_EXPORTER_PORT=9187
GRAFANA_PORT=3001
CADVISOR_PORT=8080
# ============================================
# Configuración de pgAdmin
# ============================================
PGADMIN_PORT=30978
PGADMIN_DEFAULT_EMAIL=admin@biblioteca-xonler.com
PGADMIN_DEFAULT_PASSWORD=admin
# ============================================
# Configuración de Jenkins
# ============================================
JENKINS_PORT=8080
JENKINS_AGENT_PORT=50000
# Nota: Jenkins genera una contraseña inicial automáticamente
# Para verla: docker exec jenkins cat /var/jenkins_home/secrets/initialAdminPassword
# La configuración se guarda en el volumen jenkins_home (persistente)

# ============================================
# Configuración de SonarQube
# ============================================
SONAR_TOKEN=changeme
SONAR_HOST_URL=http://localhost:9000
# Contraseña para el usuario sonar en PostgreSQL (por defecto: sonar)
# Cambiar en producción por seguridad
SONAR_DB_PASSWORD=sonar
# Nota: Contraseña inicial de admin de SonarQube es "admin"
# SonarQube obliga a cambiarla en el primer inicio
# La configuración se guarda en los volúmenes sonarqube_* (persistentes)

