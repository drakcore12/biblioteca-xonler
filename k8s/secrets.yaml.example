apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: biblioteca-xonler
type: Opaque
data:
  # ============================================
  # PostgreSQL Password
  # ============================================
  # Codificar en base64: echo -n "tu-password" | base64
  # O en PowerShell: [Convert]::ToBase64String([System.Text.Encoding]::UTF8.GetBytes("tu-password"))
  DB_PASSWORD: cG9zdGdyZXM=  # postgres (CAMBIAR EN PRODUCCIÓN)
  POSTGRES_PASSWORD: cG9zdGdyZXM=  # postgres (CAMBIAR EN PRODUCCIÓN)
  
  # ============================================
  # SonarQube Credentials
  # ============================================
  # Codificar en base64: echo -n "sonar-password" | base64
  SONAR_JDBC_PASSWORD: c29uYXI=  # sonar (CAMBIAR EN PRODUCCIÓN)

  # ============================================
  # Seguridad y Autenticación
  # ============================================
  # Generar un JWT_SECRET seguro: openssl rand -base64 32
  # O en PowerShell: -join ((48..57) + (65..90) + (97..122) | Get-Random -Count 32 | ForEach-Object {[char]$_})
  JWT_SECRET: Y2hhbmdlLXRoaXMtc2VjcmV0LWluLXByb2R1Y3Rpb24=  # change-this-secret-in-production (CAMBIAR EN PRODUCCIÓN)
  
  # ============================================
  # Configuración de Encriptación
  # ============================================
  # Generar valores seguros para producción
  ENCRYPTION_PASSWORD: Y2hhbmdlLXRoaXMtcGFzc3dvcmQtaW4tcHJvZHVjdGlvbg==  # change-this-password-in-production (CAMBIAR EN PRODUCCIÓN)
  ENCRYPTION_SALT: Y2hhbmdlLXRoaXMtc2FsdC1pbi1wcm9kdWN0aW9u  # change-this-salt-in-production (CAMBIAR EN PRODUCCIÓN)
  
  # ============================================
  # Configuración de Email (SMTP)
  # ============================================
  # Codificar la contraseña SMTP en base64
  # SMTP_PASS: ""  # echo -n "tu-smtp-password" | base64
  
  # ============================================
  # Alertas y Monitoreo
  # ============================================
  # Codificar el token del webhook en base64
  # WEBHOOK_TOKEN: ""  # echo -n "tu-webhook-token" | base64
  
  # ============================================
  # Configuración SSL/TLS (Opcional)
  # ============================================
  # Si necesitas certificados SSL, codifícalos en base64:
  # cat ca-cert.pem | base64 -w 0
  # cat client-cert.pem | base64 -w 0
  # cat client-key.pem | base64 -w 0
  # DB_SSL_CA: ""  # Base64 del certificado CA
  # DB_SSL_CERT: ""  # Base64 del certificado
  # DB_SSL_KEY: ""  # Base64 de la clave privada
  
  # ============================================
  # Configuración de Monitoreo
  # ============================================
  GRAFANA_ADMIN_PASSWORD: YWRtaW4=  # admin (CAMBIAR EN PRODUCCIÓN)
  PGADMIN_DEFAULT_PASSWORD: YWRtaW4=  # admin (CAMBIAR EN PRODUCCIÓN)
  
  # ============================================
  # PostgreSQL Exporter Data Source Name
  # ============================================
  # Formato: postgresql://user:password@host:port/database?sslmode=disable
  # Codificar en base64: echo -n "postgresql://user:password@postgresql-service:5432/xonler?sslmode=disable" | base64
  POSTGRES_EXPORTER_DSN: cG9zdGdyZXNxbDovL3Bvc3RncmVzOnBvc3RncmVzQHBvc3RncmVzcWwtc2VydmljZTo1NDMyL3hvbmxlcj9zc2xtb2RlPWRpc2FibGU=  # postgresql://postgres:postgres@postgresql-service:5432/xonler?sslmode=disable

