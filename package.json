{
    "name": "biblioteca-xonler-main",
    "version": "1.0.0",
    "description": "Sistema de gestión de bibliotecas escolares",
    "main": "src/server.js",
    "scripts": {
        "start": "node --enable-source-maps src/server.js",
        "dev": "nodemon --exec \"node --enable-source-maps\" src/server.js",
        "setup": "node --enable-source-maps scripts/setup.js",
        "test": "jest --ci --reporters=default --reporters=jest-junit",
        "test:unit": "jest --coverage --ci --reporters=default --reporters=jest-junit",
        "test:watch": "node --enable-source-maps ./node_modules/.bin/jest --watch",
        "test:coverage": "jest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:load": "artillery run tests/artillery-config.yml",
        "sonar": "cross-env npx sonarqube-scanner",
        "sonar:local": "cross-env SONAR_HOST_URL=http://localhost:9000 npx sonarqube-scanner",
        "sonar:cloud": "cross-env SONAR_HOST_URL=https://sonarcloud.io npx sonarqube-scanner"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Srpino/Biblioteca-Xonler.git"
    },
    "keywords": [
        "biblioteca",
        "escolar",
        "gestión",
        "libros"
    ],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/Srpino/Biblioteca-Xonler/issues"
    },
    "homepage": "https://github.com/Srpino/Biblioteca-Xonler#readme",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-rate-limit": "^8.1.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "node-cron": "^4.2.1",
        "node-fetch": "^3.3.2",
        "nodemailer": "^7.0.10",
        "pg": "^8.15.6",
        "prom-client": "^15.0.0",
        "qrcode": "^1.5.4",
        "speakeasy": "^2.0.0",
        "winston": "^3.18.3",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@playwright/test": "^1.40.0",
        "babel-jest": "^30.2.0",
        "cross-env": "^10.1.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^30.2.0",
        "jest-junit": "^16.0.0",
        "jest-location-mock": "^2.0.0",
        "jsdom": "^27.1.0",
        "nodemon": "^3.0.0",
        "supertest": "^7.1.4"
    }
}
